{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Effect": "Allow",
            "Principal": {
                "Federated": "arn:aws:iam::<ACCOUNT NUM>:oidc-provider/<EKS OIDC>"
            },
            "Action": "sts:AssumeRoleWithWebIdentity",
            "Condition": {
                "StringEquals": {
                    "<EKS OIDC>:aud": "sts.amazonaws.com",
                    "<EKS OIDC>:sub": "system:serviceaccount:fluentlogging:fluent-bit"
                }
            }
        }
    ]
}